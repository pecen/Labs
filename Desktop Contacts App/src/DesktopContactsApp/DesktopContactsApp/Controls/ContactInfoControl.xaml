<UserControl
    x:Class="DesktopContactsApp.Controls.ContactInfoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DesktopContactsApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="130"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Background="#AAE5E5E5">
        <StackPanel Margin="5">
            <TextBlock FontSize="10" Text="Name" />
            <TextBlock
                x:Name="nameTextBlock"
                Margin="0,0,0,5"
                FontSize="20"
                FontWeight="Bold"
                Text="Name Lastname" />
            <TextBlock FontSize="10" Text="E-mail" />
            <TextBlock
                x:Name="emailTextBlock"
                Margin="0,0,0,5"
                FontSize="15"
                Foreground="DodgerBlue"
                Text="example@domain.com" />
            <TextBlock FontSize="10" Text="Phone" />
            <TextBlock
                x:Name="phoneTextBlock"
                FontSize="15"
                FontStyle="Italic"
                Text="(123) 456 7890" />
        </StackPanel>
    </Grid>
</UserControl>
